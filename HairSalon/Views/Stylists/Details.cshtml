@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist
@using HairSalon.Models

<h2>Stylist Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

@if (@Model.Clients.Count == 0)
{
  <h3>This stylist has no clients at the moment.</h3>
}
else 
{
  <h3>Clients:</h3>
  <ul>
    @foreach (Client entry in Model.Clients)
    {
      <li>@Html.ActionLink($"{entry.Name}", "Details", "Clients", new { id = entry.ClientId})</li>
    }
  </ul>
}

<p>@Html.ActionLink("Edit Stylist", "Edit", new { id = Model.StylistId})</p>
<p>@Html.ActionLink("Delete Stylist", "Delete", new { id = Model.StylistId})</p>
<p>@Html.ActionLink("Back to list of Stylists", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>