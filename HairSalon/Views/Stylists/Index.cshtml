@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<div class="col py-2 col-xl-2 px-sm-2 px-0" id="main-display">
  <span class="fs-5 d-none d-sm-inline">Navigation Bar</span>
  <p>Some message here to users</p>

  @if (@Model.Count == 0)
  {
    <h3>No stylists have been added</h3>
  } 

  <ul>
    @foreach(Stylist entry in Model)
    {
      <li>@Html.ActionLink($"{entry.Name}", "Details", new { id = entry.StylistId })</li>
    }
  </ul>

  <p>@Html.ActionLink("Add a stylist", "Create")</p>
  <p>@Html.ActionLink("Add a client", "Create", "Clients")</p>
</div>