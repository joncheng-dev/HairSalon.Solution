@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1>Clients</h1>

@if (@Model.Count == 0)
{
  <h3>No clients have been added yet.</h3>
} 
else 
{
  <ul>
  @foreach (Client entry in Model)
  {
    <li>@Html.ActionLink($"{entry.Name}", "Details", new {id = entry.ClientId}) | @entry.Stylist.Name</li>
  }
  </ul>
}

<p>@Html.ActionLink("Add new client", "Create")</p>