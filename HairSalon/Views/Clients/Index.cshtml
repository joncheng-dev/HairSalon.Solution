@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Clients</h1>

@if (@Model.Count == 0)
{
  <h3>No clients have been added yet.</h3>
} 

<ul>
@foreach (Client entry in Model)
{
  <li>@Html.ActionLink($"{entry.Name}", "Details", new {id = entry.ClientId})</li>
}
</ul>

<p>@Html.ActionLink("Add new client", "Create")</p>